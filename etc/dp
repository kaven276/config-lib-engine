# 配置本机源和目标服务器环境变量，然后运行此脚本进行一键式全流程部署
export DIR=config
export SOURCE=`pwd`
export TARGET="wosale@${PROD_HOST}"

# 第二步：h5 构建结果和杂项文件上传同步到服务器
rsync -av --delete  \
--filter="- .git/" \
--filter="- .node-version" \
--filter="- node_modules-" \
$SOURCE/ "${TARGET}:.nodeapp/${DIR}"

ssh ${TARGET} <<eof
cd ~/.nodeapp/${DIR}
pm2 startOrReload ./ecosystem.config.js
eof
